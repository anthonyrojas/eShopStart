<style>
    thead{
        background-color: #343434;
        color: #FFF;
    }
    tbody{
        color: #000;
    }
    h1,h2,h3,h4,h5{
        text-align: center;
    }
    body{
        font-family: 'Monsterrat', sans-serif;
    }
    table{
        width: 100%;
    }
</style>
</head>
<body>
    <h1>Order</h1>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Qty</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            {{#each Products}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{OrderProduct.amount}}</td>
                    <td>{{price}}</td>
                </tr>
            {{/each}}
            <tr style="font-weight:bold;">
                <td>Total</td>
                <td></td>
                <td style="font-weight:bolder;">{{total}}</td>
            </tr>
        </tbody>
    </table>
</body>
